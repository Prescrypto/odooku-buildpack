#!/usr/bin/env bash
ARCHIVE="https://odooku.s3.amazonaws.com/libraries/vendor/sasl.tar.gz"

# Syntax sugar.
source $BIN_DIR/utils

if [ -f ".heroku/vendor/lib/sasl.so" ]; then
  export SASL=$(pwd)/vendor
else
  puts-step "Bootstrapping Cyrus SASL."
  mkdir -p .heroku/vendor
  curl $ARCHIVE -s | tar zxv -C .heroku/vendor &> /dev/null
  export SASL=$(pwd)/vendor
fi
