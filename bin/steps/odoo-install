#!/usr/bin/env bash

ARCHIVE=`head -n 1 odoo.txt`

# Copy wrapper script
cp $ROOT_DIR/lib/odooku .heroku/odoo/bin

if [ ! -d ".heroku/odoo/addons" ]; then
  mkdir ./odoo_tmp
  curl -sL $ARCHIVE | tar xz -C ./odoo_tmp --strip 1
  mv ./odoo_tmp/addons .heroku/odoo/addons
  rm -r ./odoo_tmp
fi

export ODOOKU_ADDONS="$HOME/.heroku/odoo/addons"
if [ -d "./addons" ]; then
  export ODOOKU_ADDONS="$ODOOKU_ADDONS,$HOME/addons"
fi
