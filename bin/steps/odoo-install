#!/usr/bin/env bash

# Syntax sugar.
source $BIN_DIR/utils

ARCHIVE=https://github.com/odoo/odoo/archive/9.0.tar.gz

if [ ! -f ".heroku/odoo/addons" ]; then
  mkdir ./odoo_tmp
  curl -sL $ARCHIVE | tar xz -C ./odoo_tmp --strip 1
  pip install --no-cache-dir --no-dependencies ./odoo_tmp
  mv ./odoo_tmp/addons .heroku/odoo/addons
  rm -r ./odoo_tmp
fi
