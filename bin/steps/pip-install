#!/usr/bin/env bash

# Syntax sugar.
source $BIN_DIR/utils

# Install dependencies with Pip.
puts-cmd "pip install -r odoo_requirements.txt"

set +e
CFLAGS="$CFLAGS" LDFLAGS="$LDFLAGS" .heroku/odoo/bin/python -m pip install -r odoo_requirements.txt --exists-action=w --src=./.heroku/src --disable-pip-version-check --no-cache-dir 2>&1 | tee $WARNINGS_LOG | cleanup | indent
PIP_STATUS="${PIPESTATUS[0]}"
set -e

if [[ ! $PIP_STATUS -eq 0 ]]; then
    exit 1
fi
